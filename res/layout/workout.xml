<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Running" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=" mode" />

        <Button
            android:id="@+id/btMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:layout_weight="1">

            <FrameLayout
                android:id="@+id/frDialChart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:clipChildren="false"
                android:foregroundGravity="top"
                android:orientation="vertical"
                android:scrollbars="none" >
            </FrameLayout>
            
            <tw.edu.ntu.csie.angryrunner.ProgressBarView
                android:id="@+id/progressBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:layout_weight="1">

            <tw.edu.ntu.csie.angryrunner.StatusItemLayout
                android:id="@+id/statDistance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </tw.edu.ntu.csie.angryrunner.StatusItemLayout>

            <tw.edu.ntu.csie.angryrunner.StatusItemLayout
                android:id="@+id/statDuration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </tw.edu.ntu.csie.angryrunner.StatusItemLayout>

            <tw.edu.ntu.csie.angryrunner.StatusItemLayout
                android:id="@+id/statCalorie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </tw.edu.ntu.csie.angryrunner.StatusItemLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btWorkout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Workout" />

        <Button
            android:id="@+id/btStop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop" />

    </LinearLayout>

</LinearLayout>