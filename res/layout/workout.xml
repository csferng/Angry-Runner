<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/INIT_MODE" 
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" 
            android:padding="5dp"/>
        
        <Button
            android:id="@+id/btMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/BT_MAP" 
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1" android:paddingBottom="1dp" android:paddingTop="1dp">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:layout_weight="1" android:layout_marginRight="1dp" android:gravity="center">

            <FrameLayout
                android:id="@+id/frDialChart"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:clipChildren="false"
                android:foregroundGravity="center"
                android:orientation="vertical"
                android:scrollbars="none" android:background="@drawable/border_background" android:paddingBottom="1dp" android:paddingTop="1dp" android:layout_marginTop="1dp" android:layout_marginBottom="2dp">
            </FrameLayout>
            
            <tw.edu.ntu.csie.angryrunner.ProgressBarView
                android:id="@+id/progressBar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2" android:paddingBottom="1dp" android:paddingTop="1dp" android:layout_marginBottom="1dp" android:layout_marginTop="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:layout_weight="1" android:layout_marginLeft="1dp" android:gravity="center">

            <tw.edu.ntu.csie.angryrunner.StatusItemLayout
                android:id="@+id/statMajor"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1" android:paddingBottom="1dp" android:paddingTop="1dp">
            </tw.edu.ntu.csie.angryrunner.StatusItemLayout>

            <tw.edu.ntu.csie.angryrunner.StatusItemLayout
                android:id="@+id/statMinor"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" android:paddingBottom="1dp" android:paddingTop="1dp">
            </tw.edu.ntu.csie.angryrunner.StatusItemLayout>

            <tw.edu.ntu.csie.angryrunner.StatusItemLayout
                android:id="@+id/statCalorie"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" android:paddingBottom="1dp" android:paddingTop="1dp">
            </tw.edu.ntu.csie.angryrunner.StatusItemLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btWorkout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_goal_selector"
        android:textStyle="bold"
        android:text="@string/BT_GOAL" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btStart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_start_selector"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="@string/BT_START" />
        
        <!-- android:background="@drawable/bt_start_selector" -->

        <Button
            android:id="@+id/btStop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_stop_selector"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="@string/BT_STOP" />

    </LinearLayout>

</LinearLayout>